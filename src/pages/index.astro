---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import DishCarousel from '../components/DishCarousel.astro';
import MenuCards from '../components/MenuCards.astro';
import RestaurantCarousel from '../components/RestaurantCarousel.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Corazón Latino - Restaurant Sud-Américain">
  <Header />

  <!-- Section Hero avec ID -->
  <div id="hero">
    <HeroSection />
  </div>

  <!-- Section Nos Plats avec ID -->
  <div id="nos-plats">
    <DishCarousel />
  </div>

  <!-- Section Menu/Carte avec ID -->
  <div id="menu">
    <MenuCards />
  </div>

  <!-- Section Restaurant avec ID -->
  <div id="le-restaurant">
    <RestaurantCarousel />
  </div>

  <!-- Section Contact avec ID -->
  <div id="contact">
    <ContactSection />
  </div>

  <Footer />
</Layout>

---
// src/components/MenuCards.astro - Version simplifiée
import { menus } from '../data/menu.js';
---

<section id="menu" class="py-20 bg-gradient-to-br from-amber-50 to-orange-100 relative">
  <!-- Container principal -->
  <div class="container mx-auto px-4">
    <!-- Titre de section -->
    <div class="text-center mb-12">
      <h2 class="font-['Playfair_Display'] text-4xl md:text-5xl font-bold text-red-700 mb-4">
        Nuestras Especialidades
      </h2>
      <div class="w-16 h-1 bg-yellow-400 mx-auto"></div>
    </div>

    <!-- Grille des menus -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {menus.map((menu) => (
        <div class="bg-gradient-to-br from-amber-100 to-yellow-200 p-6 rounded-xl shadow-lg border-2 border-amber-300 relative flex flex-col h-full hover:scale-[1.02] transition-transform duration-300">

          <!-- Nom du menu -->
          <h3 class="font-['Playfair_Display'] text-2xl font-bold text-amber-900 mb-3 mt-4 text-center">
            {menu.name}
          </h3>

          <!-- Description -->
          <p class="text-amber-700 italic mb-4 text-center">
            {menu.description}
          </p>

          <!-- Prix -->
          <div class="text-center mb-4">
            <span class="text-2xl font-bold text-red-700 bg-amber-200 px-4 py-2 rounded-full">
              {menu.price}
            </span>
          </div>

          <!-- Liste des plats -->
          <ul class="space-y-2 mb-6 flex-grow">
            {menu.dishes.map((dish) => (
              <li class="flex items-center gap-2 text-amber-900">
                <span class="w-2 h-2 bg-yellow-600 rounded-full flex-shrink-0"></span>
                <span class="text-sm">{dish}</span>
              </li>
            ))}
          </ul>

          <!-- Bouton réserver -->
          <button class="w-full bg-red-700 hover:bg-red-800 text-white font-bold py-3 px-4 rounded-lg transition-colors duration-300 mt-auto">
            Réserver ce menu
          </button>

        </div>
      ))}
    </div>
  </div>
</section>

<section id="contact" class="contact-section">
  <div class="contact-container">
    <!-- Titre de la section -->
    <div class="contact-header">
      <h2 class="font-heading text-4xl md:text-5xl font-bold text-red-700 mb-4">Contactez-nous</h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto mb-6">Nous serions ravis de vous accueillir</p>
      <div class="w-16 h-1 bg-yellow-400 mx-auto"></div>
    </div>

    <div class="contact-content">
      <!-- Informations du restaurant -->
      <div class="contact-info">
        <div class="info-card">
          <h3 class="info-title">Coordonn√©es</h3>
          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p class="info-label">Adresse</p>
              <p class="info-value">123 Rue de la Gastronomie<br>75001 Paris, France</p>
            </div>
          </div>

          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <p class="info-label">T√©l√©phone</p>
              <p class="info-value">01 23 45 67 89</p>
            </div>
          </div>

          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <div>
              <p class="info-label">Email</p>
              <p class="info-value">contact@restaurant-exemple.fr</p>
            </div>
          </div>
        </div>

        <!-- Horaires -->
        <div class="info-card">
          <h3 class="info-title">Horaires d'ouverture</h3>
          <div class="schedule-list">
            <div class="schedule-item">
              <span class="schedule-day">Lundi - Vendredi</span>
              <span class="schedule-hours">12h00 - 14h30 | 19h00 - 22h30</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-day">Samedi</span>
              <span class="schedule-hours">19h00 - 23h00</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-day">Dimanche</span>
              <span class="schedule-hours">Ferm√©</span>
            </div>
          </div>
        </div>

        <!-- Carte -->
        <div class="info-card map-card">
          <h3 class="info-title">Nous trouver</h3>
          <div class="map-container" onclick="openMaps()">
            <div class="map-placeholder">
              <!-- Image de carte simple vue du dessus -->
              <svg class="map-visual" viewBox="0 0 300 200" xmlns="http://www.w3.org/2000/svg">
                <!-- Fond -->
                <rect width="300" height="200" fill="#f8fafc"/>

                <!-- Quadrillage simple de rues -->
                <defs>
                  <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
                    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#e2e8f0" stroke-width="1"/>
                  </pattern>
                </defs>
                <rect width="300" height="200" fill="url(#grid)"/>

                <!-- Quelques rues principales -->
                <line x1="0" y1="100" x2="300" y2="100" stroke="#cbd5e1" stroke-width="3"/>
                <line x1="150" y1="0" x2="150" y2="200" stroke="#cbd5e1" stroke-width="3"/>

                <!-- Pin du restaurant au centre -->
                <circle cx="150" cy="100" r="8" fill="#ef4444"/>
                <circle cx="150" cy="100" r="4" fill="#ffffff"/>
              </svg>

              <!-- Overlay avec texte -->
              <div class="map-overlay">
                <p>üìç Notre restaurant</p>
                <p class="map-note">Cliquez pour ouvrir dans Maps</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulaire de contact -->
      <div class="contact-form-wrapper">
        <div class="form-card">
          <h3 class="form-title">Envoyez-nous un message</h3>
          <form class="contact-form" id="contactForm">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName" class="form-label">Pr√©nom</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  class="form-input"
                  required
                >
              </div>
              <div class="form-group">
                <label for="lastName" class="form-label">Nom</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  class="form-input"
                  required
                >
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-input"
                required
              >
            </div>

            <div class="form-group">
              <label for="phone" class="form-label">T√©l√©phone (optionnel)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-input"
              >
            </div>

            <div class="form-group">
              <label for="subject" class="form-label">Sujet</label>
              <select id="subject" name="subject" class="form-input" required>
                <option value="">Choisissez un sujet</option>
                <option value="reservation">R√©servation</option>
                <option value="information">Demande d'information</option>
                <option value="event">√âv√©nement priv√©</option>
                <option value="feedback">Commentaire</option>
                <option value="other">Autre</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message" class="form-label">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="form-input form-textarea"
                placeholder="Votre message..."
                required
              ></textarea>
            </div>

            <button type="submit" class="form-submit">
              Envoyer le message
              <svg class="submit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // FONCTION OPENMAPS - Avec d√©tection d'appareil pour iOS/Android/Desktop
  window.openMaps = function() {
    console.log('Fonction openMaps appel√©e'); // Pour d√©bugger

    // Coordonn√©es de votre restaurant
    const latitude = 48.09576;
    const longitude = -4.34926;
    const restaurantName = "Restaurant El Pueblo Del Papito";
    const address = "54 Rue Pierre Brossolette, 29100 Douarnenez"; // Remplacez par votre vraie adresse

    // D√©tection de l'appareil
    const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
    const isAndroid = /Android/.test(navigator.userAgent);

    console.log('Appareil d√©tect√© - iOS:', isIOS, 'Android:', isAndroid);

    let url;

    if (isIOS) {
      // Pour iOS - Essayer Apple Maps en premier, puis Google Maps en fallback
      console.log('Ouverture pour iOS - Apple Maps');

      // URL pour Apple Maps
      const appleMapsUrl = `maps://maps.google.com/maps?daddr=${latitude},${longitude}&amp;ll=`;

      // Cr√©er un iframe invisible pour tenter d'ouvrir Apple Maps
      const iframe = document.createElement('iframe');
      iframe.style.display = 'none';
      iframe.src = appleMapsUrl;
      document.body.appendChild(iframe);

      // Fallback vers Google Maps apr√®s un court d√©lai
      setTimeout(() => {
        document.body.removeChild(iframe);
        const googleFallback = `https://maps.google.com/maps?q=${latitude},${longitude}`;
        console.log('Fallback iOS vers Google Maps:', googleFallback);
        window.open(googleFallback, '_blank');
      }, 500);

    } else if (isAndroid) {
      // Pour Android - Ouvrir Google Maps natif
      console.log('Ouverture pour Android - Google Maps natif');

      // Essayer le protocole geo: pour l'app native
      const geoUrl = `geo:${latitude},${longitude}?q=${latitude},${longitude}(${encodeURIComponent(restaurantName)})`;

      // Cr√©er un lien invisible et le cliquer
      const link = document.createElement('a');
      link.href = geoUrl;
      link.style.display = 'none';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);

      // Fallback vers Google Maps web apr√®s un court d√©lai
      setTimeout(() => {
        const googleFallback = `https://maps.google.com/maps?q=${latitude},${longitude}`;
        console.log('Fallback Android vers Google Maps web:', googleFallback);
        window.open(googleFallback, '_blank');
      }, 500);

    } else {
      // Pour desktop - Google Maps dans le navigateur
      console.log('Ouverture pour Desktop - Google Maps web');
      url = `https://www.google.com/maps/search/?api=1&query=${latitude},${longitude}`;
      console.log('URL Desktop:', url);
      window.open(url, '_blank');
    }
  };

  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contactForm');

    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();

        // Ici vous pouvez ajouter la logique d'envoi du formulaire
        // Par exemple, envoyer les donn√©es √† un endpoint API

        const formData = new FormData(this);
        const data = Object.fromEntries(formData);

        console.log('Donn√©es du formulaire:', data);

        // Afficher un message de confirmation temporaire
        const submitButton = this.querySelector('.form-submit');
        const originalText = submitButton.innerHTML;

        submitButton.innerHTML = 'Message envoy√© !';
        submitButton.disabled = true;

        setTimeout(() => {
          submitButton.innerHTML = originalText;
          submitButton.disabled = false;
          this.reset();
        }, 3000);
      });
    }

    // Alternative: Attacher l'√©v√©nement clic directement en JavaScript
    const mapContainer = document.querySelector('.map-container');
    if (mapContainer) {
      mapContainer.addEventListener('click', function() {
        console.log('Clic sur la carte d√©tect√©'); // Pour d√©bugger
        window.openMaps();
      });
    }
  });
</script>

<style>
  .contact-section {
    background: linear-gradient(to bottom right, var(--color-neutral-warm), #fed7aa);
    color: var(--color-neutral-dark);
    padding: 5rem 0;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-neutral-dark);
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Informations du restaurant */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: #ffffff;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
  }

  .info-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .info-label {
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .info-value {
    color: var(--color-neutral-dark);
    line-height: 1.5;
  }

  /* Horaires */
  .schedule-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .schedule-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: #f9fafb;
    border-radius: 0.5rem;
    border-left: 4px solid var(--color-primary);
  }

  .schedule-day {
    font-weight: 600;
    flex: 1;
  }

  .schedule-hours {
    color: #6b7280;
    font-size: 0.875rem;
  }

  /* Carte */
  .map-container {
    position: relative;
    height: 200px;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid #e5e7eb;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .map-container:hover {
    transform: scale(1.02);
  }

  .map-placeholder {
    position: relative;
    width: 100%;
    height: 100%;
    background: #f8fafc;
  }

  .map-visual {
    width: 100%;
    height: 100%;
    display: block;
  }

  .map-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
    padding: 16px;
    text-align: center;
  }

  .map-overlay p {
    margin: 2px 0;
    font-size: 14px;
    font-weight: 600;
  }

  .map-note {
    font-size: 12px !important;
    opacity: 0.9;
    font-weight: 400 !important;
  }

  /* Formulaire */
  .contact-form-wrapper {
    position: sticky;
    top: 2rem;
  }

  .form-card {
    background: #ffffff;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
  }

  .form-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-neutral-dark);
  }

  .form-input {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(196, 30, 58, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-submit {
    font-family: var(--font-primary, 'Open Sans', sans-serif);
    background: var(--color-accent);
    color: var(--color-neutral-dark);
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 210, 63, 0.3);
  }

  .form-submit:hover {
    background: var(--color-secondary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
  }

  .form-submit:disabled {
    background: #9ca3af;
    color: white;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .submit-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-form-wrapper {
      position: static;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-title {
      font-size: 2rem;
    }
  }
</style>

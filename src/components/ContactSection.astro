---

<section id="contact" class="contact-section">
  <div class="contact-container">
    <!-- Titre de la section -->
    <div class="contact-header">
      <h2 class="contact-title">Contactez-nous</h2>
      <p class="contact-subtitle">Nous serions ravis de vous accueillir</p>
    </div>

    <div class="contact-content">
      <!-- Informations du restaurant -->
      <div class="contact-info">
        <div class="info-card">
          <h3 class="info-title">Coordonnées</h3>
          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p class="info-label">Adresse</p>
              <p class="info-value">123 Rue de la Gastronomie<br>75001 Paris, France</p>
            </div>
          </div>

          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <p class="info-label">Téléphone</p>
              <p class="info-value">01 23 45 67 89</p>
            </div>
          </div>

          <div class="info-item">
            <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <div>
              <p class="info-label">Email</p>
              <p class="info-value">contact@restaurant-exemple.fr</p>
            </div>
          </div>
        </div>

        <!-- Horaires -->
        <div class="info-card">
          <h3 class="info-title">Horaires d'ouverture</h3>
          <div class="schedule-list">
            <div class="schedule-item">
              <span class="schedule-day">Lundi - Vendredi</span>
              <span class="schedule-hours">12h00 - 14h30 | 19h00 - 22h30</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-day">Samedi</span>
              <span class="schedule-hours">19h00 - 23h00</span>
            </div>
            <div class="schedule-item">
              <span class="schedule-day">Dimanche</span>
              <span class="schedule-hours">Fermé</span>
            </div>
          </div>
        </div>

        <!-- Carte -->
        <div class="info-card map-card">
          <h3 class="info-title">Nous trouver</h3>
          <div class="map-container">
            <!-- Placeholder pour la carte - à remplacer par une vraie carte -->
            <div class="map-placeholder">
              <svg class="map-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              <p>Carte interactive</p>
              <p class="map-note">Cliquez pour ouvrir dans Google Maps</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulaire de contact -->
      <div class="contact-form-wrapper">
        <div class="form-card">
          <h3 class="form-title">Envoyez-nous un message</h3>
          <form class="contact-form" id="contactForm">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName" class="form-label">Prénom</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  class="form-input"
                  required
                >
              </div>
              <div class="form-group">
                <label for="lastName" class="form-label">Nom</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  class="form-input"
                  required
                >
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-input"
                required
              >
            </div>

            <div class="form-group">
              <label for="phone" class="form-label">Téléphone (optionnel)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-input"
              >
            </div>

            <div class="form-group">
              <label for="subject" class="form-label">Sujet</label>
              <select id="subject" name="subject" class="form-input" required>
                <option value="">Choisissez un sujet</option>
                <option value="reservation">Réservation</option>
                <option value="information">Demande d'information</option>
                <option value="event">Événement privé</option>
                <option value="feedback">Commentaire</option>
                <option value="other">Autre</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message" class="form-label">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="form-input form-textarea"
                placeholder="Votre message..."
                required
              ></textarea>
            </div>

            <button type="submit" class="form-submit">
              Envoyer le message
              <svg class="submit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contactForm');

    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();

        // Ici vous pouvez ajouter la logique d'envoi du formulaire
        // Par exemple, envoyer les données à un endpoint API

        const formData = new FormData(this);
        const data = Object.fromEntries(formData);

        console.log('Données du formulaire:', data);

        // Afficher un message de confirmation temporaire
        const submitButton = this.querySelector('.form-submit');
        const originalText = submitButton.innerHTML;

        submitButton.innerHTML = 'Message envoyé !';
        submitButton.disabled = true;

        setTimeout(() => {
          submitButton.innerHTML = originalText;
          submitButton.disabled = false;
          this.reset();
        }, 3000);
      });
    }

    // Gestion du clic sur la carte placeholder
    const mapPlaceholder = document.querySelector('.map-placeholder');
    if (mapPlaceholder) {
      mapPlaceholder.addEventListener('click', function() {
        // Remplacer par les vraies coordonnées du restaurant
        const address = encodeURIComponent('123 Rue de la Gastronomie, 75001 Paris, France');
        window.open(`https://www.google.com/maps/search/?api=1&query=${address}`, '_blank');
      });
    }
  });
</script>

<style>
  /* Variables CSS personnalisées - à déplacer dans votre fichier CSS principal */
  .contact-section {
    --contact-bg: #fafafa;
    --contact-text: #333;
    --contact-accent: #d97706;
    --contact-card-bg: #ffffff;
    --contact-shadow: rgba(0, 0, 0, 0.1);
    --contact-border: #e5e7eb;

    background-color: var(--contact-bg);
    color: var(--contact-text);
    padding: 5rem 0;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--contact-text);
  }

  .contact-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Informations du restaurant */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: var(--contact-card-bg);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px var(--contact-shadow);
    border: 1px solid var(--contact-border);
  }

  .info-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--contact-accent);
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--contact-accent);
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .info-label {
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--contact-accent);
    margin-bottom: 0.25rem;
  }

  .info-value {
    color: var(--contact-text);
    line-height: 1.5;
  }

  /* Horaires */
  .schedule-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .schedule-item {
    display: flex;
    justify-content: between;
    align-items: center;
    padding: 0.75rem;
    background: #f9fafb;
    border-radius: 0.5rem;
    border-left: 4px solid var(--contact-accent);
  }

  .schedule-day {
    font-weight: 600;
    flex: 1;
  }

  .schedule-hours {
    color: #6b7280;
    font-size: 0.875rem;
  }

  /* Carte */
  .map-container {
    height: 200px;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid var(--contact-border);
  }

  .map-placeholder {
    height: 100%;
    background: #f3f4f6;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .map-placeholder:hover {
    background: #e5e7eb;
  }

  .map-icon {
    width: 3rem;
    height: 3rem;
    color: var(--contact-accent);
    margin-bottom: 0.5rem;
  }

  .map-note {
    font-size: 0.75rem;
    color: #6b7280;
    margin-top: 0.25rem;
  }

  /* Formulaire */
  .contact-form-wrapper {
    position: sticky;
    top: 2rem;
  }

  .form-card {
    background: var(--contact-card-bg);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px var(--contact-shadow);
    border: 1px solid var(--contact-border);
  }

  .form-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--contact-accent);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--contact-text);
  }

  .form-input {
    padding: 0.75rem;
    border: 1px solid var(--contact-border);
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--contact-accent);
    box-shadow: 0 0 0 3px rgba(217, 119, 6, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-submit {
    font-family: 'Open Sans', sans-serif;
    background: var(--color-accent);
    color: var(--color-neutral-dark);
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 210, 63, 0.3);
  }

  .form-submit:hover {
    background: var(--color-secondary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
  }

  .form-submit:disabled {
    background: #9ca3af;
    color: white;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .submit-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-form-wrapper {
      position: static;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-title {
      font-size: 2rem;
    }
  }
</style>

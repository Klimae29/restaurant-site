---

<section id="hero" class="hero-section relative min-h-screen flex items-end justify-center overflow-hidden">
  <!-- Image de fond avec effet parallax -->
  <div class="hero-bg absolute inset-0 z-0">
    <!-- Image principale du restaurant -->
    <img
      src="/images/restaurant/main.webp"
      alt="Restaurant Corazón Latino - Ambiance authentique sud-américaine"
      class="w-full h-full object-cover"
    />

    <!-- Overlays multiples pour améliorer la lisibilité -->
    <!-- Overlay principal sombre -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-black/30"></div>

    <!-- Overlay coloré pour garder l'identité sud-américaine -->
    <div class="absolute inset-0 bg-gradient-to-br from-red-700/40 via-orange-600/30 to-yellow-400/20"></div>

    <!-- Particules décoratives animées -->
    <div class="particles absolute inset-0">
      <div class="particle absolute w-2 h-2 bg-yellow-400 rounded-full opacity-60"></div>
      <div class="particle absolute w-1 h-1 bg-white rounded-full opacity-40"></div>
      <div class="particle absolute w-3 h-3 bg-orange-600 rounded-full opacity-30"></div>
      <div class="particle absolute w-2 h-2 bg-yellow-400 rounded-full opacity-50"></div>
      <div class="particle absolute w-1 h-1 bg-white rounded-full opacity-60"></div>
      <div class="particle absolute w-2 h-2 bg-yellow-400 rounded-full opacity-40"></div>
    </div>
  </div>

  <!-- Contenu principal -->
  <div class="hero-content relative z-20 text-center pb-20 max-w-6xl mx-auto pt-24 md:pt-32">
    <!-- Titre principal avec effet typewriter -->
    <h1 class="hero-title mb-8">
      <span class="font-['Dancing_Script'] text-6xl md:text-8xl lg:text-9xl font-bold text-yellow-400 drop-shadow-2xl block leading-none mb-4 hero-text-shadow">
        ¡Bienvenidos!
      </span>
      <span class="font-['Playfair_Display'] text-2xl md:text-4xl lg:text-5xl text-white font-light tracking-wide block hero-text-shadow">
        au cœur de l'Amérique du Sud
      </span>
    </h1>

    <!-- Indicateurs sociaux avec rating Google - VERSION CORRIGÉE -->
    <div class="hero-social flex flex-col md:flex-row justify-center items-center gap-4 md:gap-6 text-white/60 fade-in-delay-6">
      <!-- Rating Google Maps -->
      <a
        href="https://maps.app.goo.gl/zADURwXGeKjduqRR9"
        target="_blank"
        rel="noopener noreferrer"
        class="google-rating-hero group w-full md:w-auto flex justify-center"
      >
        <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-full px-5 py-3 border border-white/20 shadow-lg hover:bg-white/20 hover:border-yellow-400/50 transition-all duration-300">
          <!-- Icône Google -->
          <div class="text-2xl">⭐</div>

          <!-- Bloc rating -->
          <div class="flex flex-col items-start">
            <div class="text-sm font-bold text-white group-hover:text-yellow-400 transition-colors">4.8/5</div>
            <div class="text-xs text-white/70 group-hover:text-yellow-300">Google</div>
          </div>

          <!-- Séparateur vertical -->
          <div class="w-px h-8 bg-white/20 mx-2"></div>

          <!-- Étoiles et avis -->
          <div class="flex items-center gap-2">
            <div class="stars text-yellow-400 text-sm">★★★★★</div>
            <div class="text-xs text-white/80 group-hover:text-white">(492 avis)</div>
          </div>
        </div>
      </a>

      <!-- Rating TripAdvisor -->
      <a
        href="https://www.tripadvisor.fr/Restaurant_Review-g608760-d7083433-Reviews-EL_Pueblo_Del_Papito-Douarnenez_Finistere_Brittany.html"
        target="_blank"
        rel="noopener noreferrer"
        class="tripadvisor-rating group w-full md:w-auto flex justify-center"
      >
        <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-full px-5 py-3 border border-white/20 shadow-lg hover:bg-white/20 hover:border-green-400/50 transition-all duration-300">
          <!-- Logo TripAdvisor -->
          <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white font-bold text-sm group-hover:bg-green-400 transition-colors">T</div>

          <!-- Bloc rating -->
          <div class="flex flex-col items-start">
            <div class="text-sm font-bold text-white group-hover:text-green-400 transition-colors">4.6/5</div>
            <div class="text-xs text-white/70 group-hover:text-green-300">TripAdvisor</div>
          </div>

          <!-- Séparateur vertical -->
          <div class="w-px h-8 bg-white/20 mx-2"></div>

          <!-- Cercles et avis -->
          <div class="flex items-center gap-2">
            <div class="circles flex gap-1">
              <div class="w-2 h-2 bg-green-500 rounded-full group-hover:bg-green-400"></div>
              <div class="w-2 h-2 bg-green-500 rounded-full group-hover:bg-green-400"></div>
              <div class="w-2 h-2 bg-green-500 rounded-full group-hover:bg-green-400"></div>
              <div class="w-2 h-2 bg-green-500 rounded-full group-hover:bg-green-400"></div>
              <div class="w-2 h-2 bg-green-300 rounded-full group-hover:bg-green-200"></div>
            </div>
            <div class="text-xs text-white/80 group-hover:text-white">(245 avis)</div>
          </div>
        </div>
      </a>
    </div>
  </div> <!-- Fermeture correcte du hero-content -->

  <!-- Flèche animée pour inviter au scroll -->
  <div class="scroll-indicator fixed bottom-8 right-8 z-30 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Variables pour optimisation
    let ticking = false;
    let lastScrollY = 0;

    const heroBg = document.querySelector('.hero-bg');
    const heroContent = document.querySelector('.hero-content');
    const heroSection = document.querySelector('.hero-section');

    // Gestionnaire de scroll optimisé avec throttling
    function handleScroll() {
      lastScrollY = window.pageYOffset;

      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }

    window.addEventListener('scroll', handleScroll, { passive: true });

    // Animation des particules - optimisée
    const particles = document.querySelectorAll('.particle');
    particles.forEach((particle, index) => {
      // Position aléatoire
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';

      // Animation flottante simple
      particle.style.animation = `float ${3 + Math.random() * 4}s ease-in-out infinite`;
      particle.style.animationDelay = `${Math.random() * 2}s`;
    });

    // Observer pour les animations au scroll - optimisé
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observer tous les éléments avec fade-in
    document.querySelectorAll('[class*="fade-in-delay"]').forEach(el => {
      observer.observe(el);
    });

    // Cleanup sur unload
    window.addEventListener('beforeunload', () => {
      window.removeEventListener('scroll', handleScroll);
    });
  });
</script>

<style>
  .hero-section {
    min-height: 100vh;
    position: relative;
  }

  /* Animation float optimisée */
  @keyframes float {
    0%, 100% {
      transform: translate3d(0, 0, 0) rotate(0deg);
    }
    50% {
      transform: translate3d(0, -10px, 0) rotate(180deg);
    }
  }

  /* Styles des boutons hero */
  .btn-hero-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    background-color: #FFD23F;
    color: #2F1B14;
    font-weight: bold;
    font-size: 1.125rem;
    border-radius: 9999px;
    transition: all 0.5s ease;
    box-shadow: 0 10px 30px rgba(255, 210, 63, 0.3);
    position: relative;
    overflow: hidden;
    text-decoration: none;
    transform: scale(1);
  }

  .btn-hero-primary:hover {
    box-shadow: 0 20px 40px rgba(255, 210, 63, 0.4);
    transform: scale(1.05);
  }

  .btn-hero-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    border: 2px solid white;
    color: white;
    font-weight: bold;
    font-size: 1.125rem;
    border-radius: 9999px;
    transition: all 0.5s ease;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    transform: scale(1);
  }

  .btn-hero-secondary:hover {
    color: #2F1B14;
    box-shadow: 0 20px 40px rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  /* Styles pour le rating TripAdvisor */
  .tripadvisor-rating {
    text-decoration: none;
  }

  /* Effet glow au hover pour TripAdvisor */
  .tripadvisor-rating:hover {
    filter: drop-shadow(0 0 15px rgba(34, 197, 94, 0.6));
  }

  /* Animation des cercles TripAdvisor */
  .tripadvisor-rating:hover .circles div {
    animation: bounce 0.6s ease-in-out;
  }

  .tripadvisor-rating .circles div:nth-child(2) {
    animation-delay: 0.1s;
  }

  .tripadvisor-rating .circles div:nth-child(3) {
    animation-delay: 0.2s;
  }

  .tripadvisor-rating .circles div:nth-child(4) {
    animation-delay: 0.3s;
  }

  .tripadvisor-rating .circles div:nth-child(5) {
    animation-delay: 0.4s;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }

  /* Ombres de texte pour meilleure lisibilité sur image */
  .hero-text-shadow {
    text-shadow:
      2px 2px 4px rgba(0, 0, 0, 0.8),
      0 0 10px rgba(0, 0, 0, 0.6),
      0 0 20px rgba(0, 0, 0, 0.4);
  }

  /* Amélioration du contraste pour le titre principal */
  .hero-title span:first-child {
    text-shadow:
      3px 3px 6px rgba(0, 0, 0, 0.9),
      0 0 15px rgba(196, 30, 58, 0.5),
      0 0 30px rgba(0, 0, 0, 0.7);
  }

  /* Animations personnalisées */
  .fade-in-delay-1 { animation: fadeInUp 0.8s ease-out 0.2s both; }
  .fade-in-delay-2 { animation: fadeInUp 0.8s ease-out 0.4s both; }
  .fade-in-delay-3 { animation: fadeInUp 0.8s ease-out 0.6s both; }
  .fade-in-delay-4 { animation: fadeInUp 0.8s ease-out 0.8s both; }
  .fade-in-delay-5 { animation: fadeInUp 0.8s ease-out 1.0s both; }
  .fade-in-delay-6 { animation: fadeInUp 0.8s ease-out 1.2s both; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation de pulsation pour les éléments sociaux */
  .hero-social > a:hover > div {
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title span:first-child {
      font-size: 4rem;
      line-height: 0.9;
    }

    .hero-subtitle p:first-child {
      font-size: 1.25rem;
    }

    .btn-hero-primary, .btn-hero-secondary {
      width: 100%;
      max-width: 300px;
    }

    /* Rating mobile responsive */
    .google-rating-hero .flex {
      flex-direction: column;
      text-align: center;
    }

    .hero-social {
      gap: 4px;
    }
  }

  @media (max-width: 480px) {
    .hero-title span:first-child {
      font-size: 3rem;
    }

    .hero-content {
      padding-bottom: 3rem;
    }

    .google-rating-hero {
      font-size: 0.9em;
    }
  }

  /* Préventions des débordements */
  .hero-section * {
    backface-visibility: hidden;
  }
</style>
